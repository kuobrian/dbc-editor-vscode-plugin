{
  "name": "vdcode-demo",
	"displayName": "vdcode-demo",
	"description": "",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.52.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
        "*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "vdcode-demo.helloWorld",
				"title": "Hello World"
			},
			{
				"command": "vscode-demo.registerDataProvide",
				"title": "register TreeView DataProvider"
			},
			{
				"command": "vscode-demo.add_treeviewitems",
				"title": "Add New Item",
				"icon": {
					"dark": "assets/add.png",
					"light": "assets/add.png"
				}
			},
			{
				"command": "vscode-demo.edit_treeview",
				"title": "Edit Exist Item",
				"icon": {
					"dark": "assets/edit.png",
					"light": "assets/edit.png"
				} 
			},
			{
				"command": "vscode-demo.delete_treeview",
				"title": "Delete Item",
				"icon": {
					"light": "assets/trash.png",
					"dark": "assets/trash.png"
				}
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "treeview-container",
					"title": "TreeView Container",
					"icon": "assets/demo.png"
				}
			]
		},
		"views":{
			"treeview-container": [
				{
					"id": "TreeView",
					"name": "TreeView Name",
					"icon": "assets/demo.png",
					"contextualTitle": "TreeView Container"
				}
			]
		},
		"menus": {
			"view/title": [
				{
					"command": "vscode-demo.add_treeviewitems",
					"when": "view == TreeView"
				}
			],
			"view/item/context": [
				{
					"command": "vscode-demo.add_treeviewitems",
					"when": "view == TreeView && viewItem == treeviewroot",
					"group": "inline"
				},
				{
					"command": "vscode-demo.delete_treeview",
					"when": "view == TreeView && viewItem == treeviewitem",
					"group": "inline"
				},
				{
					"command": "vscode-demo.edit_treeview",
					"when": "view == TreeView && viewItem == treeviewitem",
					"group": "navigation"
				}
			]
			
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run package",
		"compile": "webpack --config ./webpack.config.plugin.js",
		"watch": "webpack --watch --config ./webpack.config.plugin.js",
		"package": "webpack --mode production --devtool hidden-source-map --config ./webpack.config.plugin.js",
		"test-compile": "tsc -p ./",
		"test-watch": "tsc -watch -p ./",
		"pretest": "yarn run test-compile && yarn run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.52.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"eslint": "^7.15.0",
		"@typescript-eslint/eslint-plugin": "^4.9.0",
		"@typescript-eslint/parser": "^4.9.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"typescript": "^4.1.2",
		"vscode-test": "^1.4.1",
		"ts-loader": "^8.0.11",
		"webpack": "^5.5.1",
		"webpack-cli": "^4.2.0"
	}
}
