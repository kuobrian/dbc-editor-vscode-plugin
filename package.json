{
	"name": "vscode-plugin-demo",
	"babel": {
		"presets": [
			"@babel/preset-env",
			"@babel/preset-react"
		]
	},
	"displayName": "vscode-plugin-demo",
	"description": "",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.52.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "vscode-plugin-demo.startReactAPP",
				"title": "React extension"
			},
			{
				"command": "vscode-plugin-demo.helloWorld",
				"title": "Hello World"
			},
			{
				"command": "vscode-plugin-demo.registerDataProvide",
				"title": "register TreeView DataProvider"
			},
			{
				"command": "vscode-plugin-demo.add_treeviewitems",
				"title": "Add New Item",
				"icon": {
					"dark": "assets/add.png",
					"light": "assets/add.png"
				}
			},
			{
				"command": "vscode-plugin-demo.edit_treeview",
				"title": "Edit Exist Item",
				"icon": {
					"dark": "assets/edit.png",
					"light": "assets/edit.png"
				}
			},
			{
				"command": "vscode-plugin-demo.delete_treeview",
				"title": "Delete Item",
				"icon": {
					"light": "assets/trash.png",
					"dark": "assets/trash.png"
				}
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "treeview-container",
					"title": "TreeView Container",
					"icon": "assets/demo.png"
				}
			]
		},
		"views": {
			"treeview-container": [
				{
					"id": "TreeView",
					"name": "TreeView Name",
					"icon": "assets/demo.png",
					"contextualTitle": "TreeView Container"
				}
			]
		},
		"menus": {
			"view/title": [
				{
					"command": "vscode-plugin-demo.add_treeviewitems",
					"when": "view == TreeView"
				}
			],
			"view/item/context": [
				{
					"command": "vscode-plugin-demo.add_treeviewitems",
					"when": "view == TreeView && viewItem == treeviewroot",
					"group": "inline"
				},
				{
					"command": "vscode-plugin-demo.delete_treeview",
					"when": "view == TreeView && viewItem == treeviewitem",
					"group": "inline"
				},
				{
					"command": "vscode-plugin-demo.edit_treeview",
					"when": "view == TreeView && viewItem == treeviewitem",
					"group": "navigation"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"package": "webpack --watch --mode development --config webpack.config.pluging.js",
		"compile": "npm-run-all compile:*",
		"compile:views": "webpack --mode production --config ./webpack.config.view.js",
		"compile:extension": "webpack --mode production --config webpack.config.pluging.js",
		"watch": "npm-run-all -p watch:*",
		"watch:extension": "webpack --watch --mode development --config webpack.config.pluging.js",
		"watch:views": "webpack --watch --mode development --config webpack.config.view.js",
		"test-watch": "tsc -watch -p ./",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@babel/core": "^7.5.4",
		"@babel/preset-env": "^7.5.4",
		"@babel/preset-react": "^7.0.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"@types/react": "^17.0.0",
		"@types/vscode": "^1.52.0",
		"@typescript-eslint/eslint-plugin": "^4.9.0",
		"@typescript-eslint/parser": "^4.9.0",
		"babel-loader": "^8.0.6",
		"css-loader": "^3.0.0",
		"eslint": "^7.15.0",
		"glob": "^7.1.6",
		"html-webpack-inline-source-plugin": "0.0.10",
		"html-webpack-plugin": "^4.5.1",
		"mocha": "^8.1.3",
		"npm-run-all": "^4.1.5",
		"style-loader": "^0.23.1",
		"ts-loader": "^8.0.11",
		"typescript": "^4.1.2",
		"vscode-test": "^1.4.1",
		"webpack": "^5.5.1",
		"webpack-cli": "^4.2.0"
	},
	"dependencies": {
		"react": "^16.8.6",
		"react-dom": "^16.8.6"
	}
}
